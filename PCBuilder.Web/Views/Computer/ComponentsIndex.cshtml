@using PCBuilder.Service.BuilderServiceAPI.DTO
@model ComputerDTO


<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-light bg-gradient text-center py-3">
            <h2 class="text-black">PC Components Overview</h2>
        </div>
        <div class="card-body p-4">
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">PC Name:</div>
                <div class="col-md-8">@Model.Name</div>
            </div>
            <hr />
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">CPU:</div>
                <div class="col-md-8">@Model.CPU?.ModelName (@(Model.CPUId?.ToString() ?? "-"))</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Motherboard:</div>
                <div class="col-md-8">@Model.Motherboard?.ModelName (@(Model.MotherboardId?.ToString() ?? "-"))</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">PSU:</div>
                <div class="col-md-8">@Model.PSU?.ModelName (@(Model.PSUId?.ToString() ?? "-"))</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Case:</div>
                <div class="col-md-8">@Model.Case?.ModelName (@(Model.CaseId?.ToString() ?? "-"))</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">CPU Cooler:</div>
                <div class="col-md-8">@Model.CPUCooler?.ModelName (@(Model.CpuCoolerId?.ToString() ?? "-"))</div>
            </div>
            <hr />
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Keyboard:</div>
                <div class="col-md-8">@Model.Keyboard?.ModelName (@(Model.KeyboardId?.ToString() ?? "-"))</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Mouse:</div>
                <div class="col-md-8">@Model.Mouse?.ModelName (@(Model.MouseId?.ToString() ?? "-"))</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Headset:</div>
                <div class="col-md-8">@Model.Headset?.ModelName (@(Model.HeadsetId?.ToString() ?? "-"))</div>
            </div>
            <hr />
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">GPUs:</div>
                <div class="col-md-8">
                    @(Model.GPUs != null && Model.GPUs.Any() ? string.Join(", ", Model.GPUs.Select(g => g.ModelName)) : "-")
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">RAM:</div>
                <div class="col-md-8">
                    @(Model.RAMs != null && Model.RAMs.Any() ? string.Join(", ", Model.RAMs.Select(r => r.ModelName)) : "-")
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Storage:</div>
                <div class="col-md-8">
                    @(Model.Storages != null && Model.Storages.Any() ? string.Join(", ", Model.Storages.Select(s => s.ModelName)) : "-")
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Case Fans:</div>
                <div class="col-md-8">
                    @((Model.CaseFans != null && Model.CaseFans.Any()) ? string.Join(", ", Model.CaseFans.Select(s => s.ModelName)) : "-")    
                </div>
            </div>
            <hr />
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Monitors:</div>
                <div class="col-md-8">
                    @((Model.Monitors != null && Model.Monitors.Any()) ? string.Join(", ", Model.Monitors.Select(s => s.ModelName)) : "-")
                </div>
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Speakers:</div>
                <div class="col-md-8">
                    @((Model.Speakers != null && Model.Speakers.Any()) ? string.Join(", ", Model.Speakers.Select(s => s.ModelName)) : "-")
                </div>
            </div>
            <hr />
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Actions:</div>
                <div class="col-md-8">
                    <a asp-action="DeleteComputer" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    </div>
</div>